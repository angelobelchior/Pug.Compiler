@page

@attribute [ExcludeFromCodeCoverage]

@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Pug Editor</title>

    <link rel="icon" type="image/x-icon" href="icon.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <script type="importmap"></script>
    <script src="https://cdn.jsdelivr.net/npm/monaco-editor@0.39.0/min/vs/loader.js"></script>
    
    <style>
        .token-highlight {
            background-color: orange;
            border-bottom: 1px solid greenyellow;
        }

        .error-line {
            background-color: rgba(255, 0, 0, 0.15); /* vermelho claro */
            border-left: 3px solid red;
        }
    </style>
</head>
<body>

<div class="container-fluid" style="background-color: #1E1E1E; width: 100vw; max-width: 100vw; padding: 0;">
    <main role="main" class="pb-3">
        <div class="row" style="height: 100vh;">
            <div class="col-12 col-md-3"
                 style="flex: 0 0 15vw; max-width: 15vw; background: #333; height: 100vh; padding-left: 25px; padding-top: 25px;overflow-y: auto;">
                <div class="row">
                    <div class="col-12">
                        <h5 id="tokensText" class="text-light">Tokens</h5>
                        <ul id="tokens" class="list-group" style="background-color:#cccccc;overflow-y: scroll;height: 500px;margin: 5px;">
                        </ul>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <h5 id="variablesText" class="text-light">Variables</h5>
                        <ul id="variables" class="list-group" style="background-color:#cccccc;overflow-y: scroll;">
                        </ul>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <h5 id="identifiersText"  class="text-light">Identifiers</h5>
                        <ul id="identifiers" class="list-group" style="background-color:#cccccc;overflow-y: scroll;">
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-9"
                 style="flex: 0 0 85vw; max-width: 85vw; height: 100vh; padding-top: 10px; padding-bottom: 30px;">
                <div class="row mb-3">
                    <div class="col-12">
                        <div class="mb-2">
                            <select id="code-samples" class="form-select" style="width: auto; display: inline-block; margin-right: 10px;">
                            </select>
                            <button id="run-button" class="btn btn-primary">
                                <i class="bi bi-play-fill"></i>
                            </button>
                        </div>
                        <div id="container" style="height: 650px; border: 1px solid #ccc;">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div id="app-console"
                             style="height: 250px; background: #222; color: #0f0; padding: 10px; border: 1px solid #ccc; font-family: monospace; overflow-y: auto;">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

</body>
</html>

<script src="js/app.js"></script>
